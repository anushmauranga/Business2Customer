@model  IEnumerable<BTCD_System.Models.ItemM>
@using BTCD_System.Models;

@{
    ViewBag.Title = "Item Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">


    @{ int count = 0; bool IsRow = true; }

    @foreach (ItemM ItemM in Model)
    {
        count++;

        if (IsRow == true)
        {
            @:<div class="row">
        }

        if (count <= 4)
        {
            IsRow = false;

            Tile tile = new Tile();

            tile.Controller = "Item";
            tile.Action = "CreateStock";
            tile.Value = ItemM.ItemId.ToString();
            tile.Subject = ItemM.ItemName;

            Html.RenderPartial("~/Views/Shared/_Tile.cshtml", tile);
        }

        if (count == 4)
        {
            count = 0;
            IsRow = true;
            @:</div>
        }
    }

</section>
<!-- /.content -->

