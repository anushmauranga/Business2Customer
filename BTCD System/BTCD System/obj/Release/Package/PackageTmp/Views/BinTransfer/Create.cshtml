@model IEnumerable<Emblishment_Management_System.Models.emsStockCumT>
@using Emblishment_Management_System.Common

@{
    ViewBag.Title = "Bin Transfer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Bin Transfer
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Transaction</a></li>
        <li class="active">Bin Transfer</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "BinTransfer", FormMethod.Post, new { @Id = "frmBinTransfer" }))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" id="searchval" />


        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary" onclick="document.forms[0].submit();">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "BinTransfer")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Bin Transfer Header Details</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>From Bin</label>
                                @Html.DropDownList("FromBinCode", (IEnumerable<SelectListItem>)(ViewBag.FromBin), "Select Bin", new { @class = "form-control select2", @style = "width: 100%;", required = "required", @onchange = "FillSalesOder();", @Id = "FromBinCode" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>From SO</label>
                                @Html.DropDownList("FromSalesOrder", Enumerable.Empty<SelectListItem>(), "Select Sales Order", new { @class = "form-control select2", @style = "width: 100%;", required = "required", @Id = "FromSalesOrder", @onchange = "FillDetails();" })
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>To Bin</label>
                                @Html.DropDownList("ToBinCode", (IEnumerable<SelectListItem>)(ViewBag.ToBin), "Select Bin", new { @class = "form-control select2", @style = "width: 100%;", required = "required", @Id = "FromQuality" })
                            </div>

                        </div>

                    </div>
                </div>
            </div>


            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Batch Item Details</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="divPartialView">
                               @{ Html.RenderPartial("_PartialBinTransferDetails", Model); }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
</section>
<!-- /.content -->

<script type="text/javascript">
    function FillDetails() {
        var Bin = $('#FromBinCode').val();
        var SalesOrder = $('#FromSalesOrder').val();

        $.ajax({
            url: '@Url.Action("FillDetails", "BinTransfer")',
            type: "POST",
            data: { BinCode: Bin, SalesOrder: SalesOrder},
            success: function (result) {
                $("#divPartialView").html(result);
                
                //Initialize Data Tables
                $(".table").DataTable({
                    "columnDefs": [{
                        "defaultContent": "-",
                        "targets": "_all"
                    }]
                });
            }
        });

    }


    function FillSalesOder() {
        var Bin = $('#FromBinCode').val();
        $.ajax({
            url: '@Url.Action("FillSalesOrder", "BinTransfer")',
            type: "POST",
            dataType: "JSON",
            data: { BinCode: Bin },
            success: function (result){
                $("#FromSalesOrder").html(""); // clear before appending new list
                $("#FromSalesOrder").append($('<option></option>').val(null).html("Select Sales Order"));
                $.each(result, function (i, item) {
                    $("#FromSalesOrder").append($('<option></option>').val(item.value).html(item.text));
                });
            }
        });

    }
</script>
