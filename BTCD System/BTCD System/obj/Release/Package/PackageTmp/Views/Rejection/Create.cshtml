@using Emblishment_Management_System.Models;

@{
    ViewBag.Title = "Rejection Transfer - New Rejection Transfer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Rejection Transfer
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Transaction</a></li>
        <li class="active">Rejection Transfer</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "Rejection", FormMethod.Post, new { @Id = "frmRejection" }))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12 btn-container-right">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "Rejection")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Rejection Filter By</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <div class="row">
                    <div id="divQCRejectPartialFilterView">
                        @{ 
                            if (ViewBag.QCPass == 0)
                            {
                                Html.RenderPartial("_PartialRejectionFilterFail");
                            }
                            else
                            {
                                Html.RenderPartial("_PartialRejectionFilterPass");
                            }
                        }
                        @*@{  }*@
                    </div>
                </div>
            </div>
        </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Rejection Item Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    @{ List<emsRejectionT> lstemsRejection = new List<emsRejectionT>();}

                    <div id="divQCRejectPartialView">
                        @{ Html.RenderPartial("_PartialRejectionDetails", lstemsRejection); }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->

