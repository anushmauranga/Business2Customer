@model BTCD_System.Models.EmployeeM
@using BTCD_System.Common

@{
    ViewBag.Title = "Employee - New Employee Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Create Employee
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Create Employee</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { @Id = "frmEmployee" }))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "Employee")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">User Registration Details</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Employee Category</label>
                            @Html.DropDownListFor(model => model.EmployeeCategory, (IEnumerable<SelectListItem>)(ViewBag.EmployeeCategory), "Select Employee Category", new { @class = "form-control select2", @style = "width: 100%;", @Id = "EmployeeCategoryCode", required = "required" })
                        </div>


                        <div class="form-group">
                            <label>First Name</label>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>Nick Name</label>
                            @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nick Name", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>Address</label>
                            @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", placeholder = "Street Number", required = "required" } })
                            @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", placeholder = "Street Name", required = "required" } })
                            @Html.EditorFor(model => model.Address3, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                        </div>

                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Mobile</label>
                            @Html.EditorFor(model => model.Telephone2, new { htmlAttributes = new { @class = "form-control", placeholder = "Mobile No", @type = "tel", @pattern = "[0-9]{3}-[0-9]{7}" } })
                        </div>

                        <div class="form-group">
                            <label>Telephone</label>
                            @Html.EditorFor(model => model.Telephone1, new { htmlAttributes = new { @class = "form-control", placeholder = "Telephone" , @type = "tel", @pattern = "[0-9]{3}-[0-9]{7}", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>E-mail</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail", @type = "email", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>NIC No</label>
                            @Html.EditorFor(model => model.NICNo, new { htmlAttributes = new { @class = "form-control", placeholder = "NIC No", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>Date of Birth</label>
                            @Html.EditorFor(model => model.Dob, new { htmlAttributes = new { @class = "form-control", placeholder = "Date of Birth", @type = "date" } })
                        </div>

                    </div>

                    <div class="col-md-4">                     
                        <div class="form-group">
                            <label>Bank</label>
                            @Html.DropDownListFor(model => model.BankCode, (IEnumerable<SelectListItem>)(ViewBag.Bank), "Select Bank", new { @class = "form-control select2", @style = "width: 100%;", @Id = "BankCode" , @onchange = "FillBankBranch();" })
                        </div>

                        <div class="form-group">
                            <label>Branch</label>
                            @Html.DropDownListFor(model => model.BranchCode, Enumerable.Empty<SelectListItem>(), "Select Branch", new { @class = "form-control select2", @style = "width: 100%;", @Id = "BranchCode" })
                        </div>

                        <div class="form-group">
                            <label>Account No</label>
                            @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Account No" } })
                        </div>

                    </div>


                </div>
            </div>
        </div>
    }


</section>
<!-- /.content -->

@if (TempData["Message"] != null)
{
    MessageBox UserMessage = (MessageBox)TempData["Message"];
    @Html.Raw("<script>bootbox.alert('" + UserMessage.Message + "');</script>");
}


<script>
    function FillBankBranch() {
        var BankCode = $('#BankCode').val();

        $.ajax({
            url: '@Url.Action("getBankBranch", "Employee")',
            type: "POST",
            dataType: "JSON",
            data: { BankCode: BankCode },
            success: function (result) {
                $("#BranchCode").html(""); // clear before appending new list
                $("#BranchCode").append($('<option></option>').val(null).html("Select Branch"));
                $.each(result, function (i, item) {
                    $("#BranchCode").append($('<option></option>').val(item.value).html(item.text));
                });
            }
        });
    }
</script>