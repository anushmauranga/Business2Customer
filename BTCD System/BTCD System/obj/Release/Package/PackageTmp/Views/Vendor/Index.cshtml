@using Emblishment_Management_System.Models
@model IEnumerable<Emblishment_Management_System.Models.emsVendorM>


@{
    ViewBag.Title = "Vendor Master";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Vendor Master
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Vendor</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div class="btn-group">
                        @using (Html.BeginForm("Create", "Vendor", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-primary">New Vendor</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Home")'"> Cancel  </button>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>



    <!-- Your Page Content Here -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Vendor Master Details</h3>

            <div class="box-tools pull-right">
                <button type="button" id="f" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus" ></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="dtVendors" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Vendor Code</th>
                                        <th>Vendor Name</th>
                                        <th>Vendor Address</th>
                                        <th>Vendor Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @using (@Html.BeginForm("Edit", "Vendor", new { Id = item.ID }, FormMethod.Get, new { @title = "Edit" }))
                                                {<button type="submit" class="btn  btn-warning btn-xs glyphicon glyphicon-edit"></button>}

                                                @using (@Html.BeginForm("Delete", "Vendor", new { Id = item.VendorCode }, FormMethod.Post, new { @title = "Delete" }))
                                                {<button type="submit" class="btn btn-danger btn-xs glyphicon glyphicon-trash" data-toggle="confirmation"></button>}
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.VendorCode)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VendorName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VendorAddress)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VendorCategoryDesc)</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>
</section>






