@model Emblishment_Management_System.Models.emsVendorM


@{
    ViewBag.Title = "Vendor Master - New Vendor Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Vendor Master
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Vendor</li>
    </ol>
</section>


<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "Vendor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12 btn-container-right">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Vendor")'"> Cancel  </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Enter New Vendor Details</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Vendor Code</label>
                            @Html.EditorFor(model => model.VendorCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Vendor Code", required = "required"} })
                        </div>


                        <div class="form-group">
                            <label>Vendor Address</label>
                            @Html.EditorFor(model => model.VendorAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Vendor Address" } })
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Vendor Name</label>
                            @Html.EditorFor(model => model.VendorName, new { htmlAttributes = new { @class = "form-control", placeholder = "Vendor Name", required = "required" } })
                        </div>

                        <div class="form-group">
                            <label>Vendor Category</label>
                            @Html.DropDownListFor(model => model.VendorCategory, (IEnumerable<SelectListItem>)(ViewBag.VCAT), "Select Vendor Category", new { @class = "form-control select2", @style = "width: 100%;", required = "required" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

</section>
<!-- /.content -->


