@model Emblishment_Management_System.Models.emsRejectionReasonsM

@{
    ViewBag.Title = "Rejection Reason Master - New Rejection Reason Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Rejection Reason Master
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Rejection Reason</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "RejectionReasons", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12 btn-container-right">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "RejectionReasons")'"> Cancel  </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Enter New Rejection Reasons Details</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Rejection Reason Code</label>
                            @Html.EditorFor(model => model.RejReasonCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Rejection Reason Code", required = "required" } })
                          
                              

                        </div>

                        <div class="form-group">
                            <label>Reason Description</label>
                            @Html.EditorFor(model => model.ReasonDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Reason Description", required = "required" } })
                        </div>

                    </div>

                </div>
            </div>
        </div>

    }
</section>

<!-- /.content -->


