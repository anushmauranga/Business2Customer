@model Emblishment_Management_System.Models.emsIssue.emsIssueTH
@using Emblishment_Management_System.Common

@{
    ViewBag.Title = "Issue - New Issue Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Good Issue Note
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Transaction</a></li>
        <li class="active">Issue</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Create", "Issue", FormMethod.Post, new { @Id = "frmIssue" }))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "Issue")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Issue Header Details</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            @*<div class="form-group">
                                    <label>Issue No</label>
                                    @Html.EditorFor(model => model.IssueNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Issue No Generate After Save", disabled = "disabled", @readonly = "readonly" } })
                                </div>*@
                            <div class="form-group">
                                <label>Issue Date</label>
                                @Html.EditorFor(model => model.IssueDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Issue Date", disabled = "disabled", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>To Location</label>
                                @Html.DropDownListFor(model => model.ToLocation, (IEnumerable<SelectListItem>)(ViewBag.Location), "Select To Location", new { @class = "form-control select2", @style = "width: 100%;", required = "required" })
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Remarks</label>
                                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", placeholder = "Remarks" } })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
    }

    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Issue Item Details</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    @{  Html.RenderPartial("_PartialIssueFilterSO");  }
                </div>
            </div>

            <div class="box-header with-border">
                <h3 class="box-title">Issue Details</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="divPartialView">
                            @{ @*List<Emblishment_Management_System.Models.emsStockCumT> lstemsStockCumT = new List<Emblishment_Management_System.Models.emsStockCumT>();*@
                            Html.RenderPartial("_PartialIssueItemDetails", Model.emsIssueTD);
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
                                }
</section>
<!-- /.content -->
