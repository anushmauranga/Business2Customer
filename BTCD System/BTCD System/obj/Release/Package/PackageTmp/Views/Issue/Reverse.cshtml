@using Emblishment_Management_System.Models;

@{
    ViewBag.Title = "Issue Reverse - New Issue Reverse";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Issue Reverse
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Transaction</a></li>
        <li class="active">Issue Reverse</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("Reverse", "Issue", FormMethod.Post, new { @Id = "frmIssueReverse" }))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12 btn-container-right">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="reset" class="btn btn-success">&nbsp;Reset&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "Issue")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Issue Reverse Filter By</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <div class="row">
                        @{ Html.RenderPartial("_PartialIssueReverseFilter"); }
                </div>
            </div>
        </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Rejection Reverse Item Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    @{ List<emsIssue.emsIssueTD> lstemsIssueT = new List<emsIssue.emsIssueTD>();}

                    <div id="divReverseDetails">
                        @{ Html.RenderPartial("_PartialIssueReverseDetails", lstemsIssueT); }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->

