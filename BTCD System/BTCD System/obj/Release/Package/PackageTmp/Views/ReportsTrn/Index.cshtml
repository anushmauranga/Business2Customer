@model IEnumerable<Emblishment_Management_System.Models.emsReports>

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<section class="content-header">
    <h1>
        Reports
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Reports</a></li>
        <li class="active">Reports</li>
    </ol>
</section>

<section class="content">

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Select Reports</h3>
        </div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReportNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReportCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReportDisplayName)
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @using (Html.BeginForm("Details", "ReportsTrn", FormMethod.Post))
                            {
                                @Html.Hidden("reportName", item.ReportName);
                                @Html.Hidden("serverPath", item.ServerPath);
                                @Html.Hidden("reportFolder", item.ReportFolder);
                                <input type="submit" class="btn btn-default" value="Select"/>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportCategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDisplayName)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>
