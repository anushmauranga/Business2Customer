@model IEnumerable<Emblishment_Management_System.Models.emsGRN.emsGrnTH>

@{
    ViewBag.Title = "GRN Reverse";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        GRN Reverse
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Transaction</a></li>
        <li class="active">GRN Reverse</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->


    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div class="btn-group">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-warning"> Cancel  </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">GRN Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>GRN No     </th>
                                        <th>GRN Date     </th>
                                        <th>Location  </th>
                                        <th>Vendor   </th>
                                        <th>Vendor Gatepass</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Emblishment_Management_System.Models.emsGRN.emsGrnTH emsGrnTH in Model)
                                    {
                                        <tr>
                                            <td>
                                                @using (@Html.BeginForm("ViewReverse", "GRN", new { Id = @emsGrnTH.GRNNo }, FormMethod.Post))
                                                {
                                                    <button type="submit" class="btn btn-success btn-xs btn-flat"> Select   </button>
                                                }
                                            </td>
                                            <td> @emsGrnTH.GRNNo</td>
                                            <td> @emsGrnTH.GRNDate.ToString("yyyy-MM-dd")</td>
                                            <td> @emsGrnTH.LocationDescription</td>
                                            <td> @emsGrnTH.VendorName</td>
                                            <td> @emsGrnTH.VendorGatepass</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>

</section>


