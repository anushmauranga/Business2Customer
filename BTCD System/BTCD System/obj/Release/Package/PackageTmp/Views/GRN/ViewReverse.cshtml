@model Emblishment_Management_System.Models.emsGRN.emsGrnTH
@using Emblishment_Management_System.Common

@{
    ViewBag.Title = "GRN Reverse - View";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Good Recived Note Reverse
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Transaction</a></li>
        <li class="active">GRN Reverse</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    @using (Html.BeginForm("SaveReverse", "GRN", FormMethod.Post, new { @Id = "frmGRNReverse" }))
    {
        @Html.AntiForgeryToken()

        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12 btn-container-right">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary" onclick="document.forms[0].submit();">&nbsp;Save&nbsp;&nbsp;</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Cancel", "GRN")'"> Cancel  </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">GRN Header Details</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>GRN No</label>
                            @Html.EditorFor(model => model.GRNNo, new { htmlAttributes = new { @class = "form-control", placeholder = "GRN No Generate After Save", disabled = "disabled", @readonly = "readonly" } })
                        </div>

                        <div class="form-group">
                            <label>Vendor</label>
                            @Html.DropDownListFor(model => model.VendorCode, (IEnumerable<SelectListItem>)(ViewBag.Vendor), "Select Vendor", new { @class = "form-control select2", @style = "width: 100%;", disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>GRN Date</label>
                            @Html.EditorFor(model => model.GRNDate, new { htmlAttributes = new { @class = "form-control", placeholder = "GRN Date", disabled = "disabled", @readonly = "readonly" } })
                        </div>

                        <div class="form-group">
                            <label>Vendor Gatepass</label>
                            @Html.EditorFor(model => model.VendorGatepass, new { htmlAttributes = new { @class = "form-control", placeholder = "Vendor Gatepass No", disabled = "disabled", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Location</label>
                            @Html.DropDownListFor(model => model.LocationCode, (IEnumerable<SelectListItem>)(ViewBag.Location), "Select Location", new { @class = "form-control select2", @style = "width: 100%;", disabled = "disabled", @readonly = "readonly" })
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">GRN Item Details</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="divPartialReverseView">
                            @{ Html.RenderPartial("_PartialGRNReverseDetails", Model.emsGrnTD); }
                        </div>
                    </div>
                </div>
            </div>
        </div>
                                }
</section>
<!-- /.content -->
