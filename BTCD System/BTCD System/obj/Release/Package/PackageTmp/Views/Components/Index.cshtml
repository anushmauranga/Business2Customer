@using Emblishment_Management_System.Models;

@{
    ViewBag.Title = "Component Master";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Component Master
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Component</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">

    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div>
                        <div class="btn-group">
                            @using (Html.BeginForm("Create", "Components", FormMethod.Get))
                            {
                                <button type="submit" class="btn btn-primary">New Component</button>
                                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Home")'"> Cancel  </button>
                            }
                        </div>
                        <button type="button" class="btn btn-danger pull-right" onclick="location.href='@Url.Action("GetComponents", "Components")'"> Download Components</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Components Filter By</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->

        <div class="box-body">
            <div class="row">
                    @{ Html.RenderPartial("_PartialComponentFilter"); }
            </div>
        </div>
    </div>


    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Components Item Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    @{ List<emsComponentsM> lstemsComponents = new List<emsComponentsM>();}

                    <div id="divComponentsPartialView">
                        @{ Html.RenderPartial("_PartialComponentTable", lstemsComponents); }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



    


