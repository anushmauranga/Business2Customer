@model IEnumerable<Emblishment_Management_System.Models.emsDamageReasonsM>

@{
    ViewBag.Title = "Damage Reason Master";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Damage Reason Master
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Master</a></li>
        <li class="active">Damage Reason</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">

    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div class="btn-group">
                        @using (Html.BeginForm("Create", "DamageReasons", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-primary">New Reason</button>
                            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Home")'"> Cancel  </button>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Your Page Content Here -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Damage Reason Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Reason Code</th>
                                        <th>Damage Category</th>
                                        <th>Reason Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Emblishment_Management_System.Models.emsDamageReasonsM emsDamageReasons in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    @using (@Html.BeginForm("Edit", "DamageReasons", new { Id = emsDamageReasons.ReasonCode }, FormMethod.Get, new { @title = "Edit" }))
                                                    {<button type="submit" class="btn btn-warning btn-xs glyphicon glyphicon-edit"></button>}

                                                     @using (@Html.BeginForm("Delete", "DamageReasons", new { Id = emsDamageReasons.ReasonCode }, FormMethod.Post, new { @title = "Delete" }))
                                                     {<button type="submit" class="btn btn-danger btn-xs glyphicon glyphicon-trash"></button>}
                                                </div>
                                            </td>
                                            <td> @emsDamageReasons.ReasonCode</td>
                                            <td> @emsDamageReasons.Description</td>
                                            <td> @emsDamageReasons.ReasonDescription</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>
</section>


