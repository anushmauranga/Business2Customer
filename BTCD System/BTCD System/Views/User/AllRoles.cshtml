@model IEnumerable<BTCD_System.Models.UserRoleU>


<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.Hidden("keyUser",(string)TempData["keyUser"])
                @Html.Hidden("userid", (int)TempData["userid"])
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(" ", "AddUserRoles", new { roleId = item.RoleID, username  = (string)TempData["keyUser"], userid = (int)TempData["userid"] }, new {@class = "btn btn-info btn-xs glyphicon glyphicon glyphicon-plus", title = "Add Role"})
            </td>
            <th></th>
            <td>
                @Html.DisplayFor(modelItem => item.RoleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
        </tr>
    }

</table>
