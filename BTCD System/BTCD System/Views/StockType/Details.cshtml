@model IEnumerable<Emblishment_Management_System.Models.emsStockTypeM>
@using Emblishment_Management_System.Models



<div class="box-body">
    <table id="tblStockTypeDetails" class="table tab-default table-bordered table-condensed table-hover table-responsive table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Stock Type Code</th>
                <th>Description</th>
                @*<th>last Trnsaction Date</th>
                <th>last Trnsaction User</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (emsStockTypeM emsStockType in Model)
            {
                <tr>
                    <td>
                        <div style="float: left">
                            <button id="btnSearch" type="submit" class="btn btn-default btn-sm glyphicon glyphicon-search Searchbtn"></button>
                        </div>
                        <div>
                            @using (@Html.BeginForm("Delete", "StockType", new { Id = emsStockType.StockTypeCode }, FormMethod.Post, new { @title = "Delete",id="frmDelete" }))
                            {
                                <button id="btnDelete" type="submit" onclick="Validate(this, event);" data-confirm ="are u sure?" class="btn btn-danger btn-sm glyphicon glyphicon-trash"></button>
                                @*@Html.ActionLink("Delete","Delete","StockType", new { Id = emsStockType.StockTypeCode },null)*@
                            }
                        </div>
                    </td>
                    <td id="StockTypeCode" class="clsStockTypeCode">@emsStockType.StockTypeCode</td>
                    <td id="Description" class="clsDescription">@emsStockType.Description</td>
                    @*<td>@emsStockType.TrnDate</td>
                    <td>@emsStockType.TrnUser</td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
