@model IEnumerable<BTCD_System.Models.StockM>
@using BTCD_System.Models;
@{
    ViewBag.Title = "My Stock Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        My Stock Details
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Transaction</a></li>
        <li class="active">My Stock Details</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->


    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div class="btn-group">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-warning"> Cancel  </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">My Stock Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="MyStock" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>View</th>
                                        <th>Item </th>
                                        <th>Item Name</th>
                                        <th>Grade</th>
                                        <th>Quantity</th>
                                        <th>Remaninig Quantity</th>
                                        <th>Unit Price (Rs)</th>
                                        <th>Remaninig Total (Rs)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (StockM Stock in Model)
                                    {
                                        <tr>
                                            <td>
                                                @using (@Html.BeginForm("ViewRequest", "Stock", new { Id = Stock.StockId }, FormMethod.Post))
                                                {
                                                    <button type="submit" class="btn btn-success btn-xs btn-flat">Request</button>
                                                }
                                            </td>
                                            <td> @Stock.ItemId</td>
                                            <td> @Stock.ItemName</td>
                                            <td> @Stock.Grade</td>
                                            <td> @Stock.Quantity</td>
                                            <td> @Stock.RemainQuantity</td>
                                            <td> @Stock.UnitPrice</td>
                                            <td> @(Decimal.Round( Stock.UnitPrice * Stock.RemainQuantity,2))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>

</section>


